---
import BootstrapIcon from "../icons/BootstrapIcon.astro";
import CSharpIcon from "../icons/CSharpIcon.astro";
import CSSIcon from "../icons/CSSIcon.astro";
import HTMLIcon from "../icons/HTMLIcon.astro";
import JavaIcon from "../icons/JavaIcon.astro";
import JavaScriptIcon from "../icons/JavaScriptIcon.astro";
import LaravelIcon from "../icons/LaravelIcon.astro";
import PHPIcon from "../icons/PHPIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import TypeScriptIcon from "../icons/TypeScriptIcon.astro";

interface Project {
  title: string;
  description: string;
  link?: string;
  github: string;
  image?: string;
  tags: Tag[];
}

interface Tag {
  name: string;
  class: string;
  icon: any;
}

const TAGS = {
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "text-white",
    icon: BootstrapIcon,
  },
  CSHARP: {
    name: "C#",
    class: "text-white",
    icon: CSharpIcon,
  },
  CSS: {
    name: "CSS",
    class: "text-white",
    icon: CSSIcon,
  },
  HTML: {
    name: "HTML",
    class: "text-white",
    icon: HTMLIcon,
  },
  JAVA: {
    name: "Java",
    class: "text-white",
    icon: JavaIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "text-white",
    icon: JavaScriptIcon,
  },
  LARAVEL: {
    name: "Laravel",
    class: "text-white",
    icon: LaravelIcon,
  },
  PHP: {
    name: "PHP",
    class: "text-white",
    icon: PHPIcon,
  },
  REACT: {
    name: "React",
    class: "text-white",
    icon: ReactIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "text-white",
    icon: TailwindIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "text-white",
    icon: TypeScriptIcon,
  },
};

const PROJECTS: Project[] = [
  {
    title: "DAM",
    description:
      "Ejercicios y apuntes realizados en el Ciclo Formativo de Grado Superior de Desarrollo de Aplicaciones Multiplataforma (DAM).",
    link: "https://github.com/Qv1ko/DAM",
    github: "https://github.com/Qv1ko/DAM",
    tags: [
      TAGS.JAVA,
      TAGS.HTML,
      TAGS.CSHARP,
      TAGS.JAVASCRIPT,
      TAGS.CSS,
      TAGS.TYPESCRIPT,
    ],
  },
  {
    title: "GDCE",
    description:
      "Aplicación web para gestionar los dispositivos tecnológicos en centros de estudios.",
    github: "https://github.com/Qv1ko/GDCE",
    tags: [TAGS.JAVASCRIPT, TAGS.PHP, TAGS.BOOTSTRAP],
  },
  {
    title: "DAW",
    description:
      "Ejercicios y apuntes realizados en el Ciclo Formativo de Grado Superior de Desarrollo de Aplicaciones Web (DAW).",
    link: "https://github.com/Qv1ko/DAW",
    github: "https://github.com/Qv1ko/DAW",
    tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS, TAGS.PHP, TAGS.BOOTSTRAP],
  },
  {
    title: "RacingTracker",
    description: "Aplicación web para gestionar carreras de automovilismo.",
    github: "https://github.com/Qv1ko/RacingTracker",
    tags: [TAGS.LARAVEL, TAGS.REACT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg text-gray-300 mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex items-center gap-x-2 border border-white/10 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      {image && (
        <img
          class="rounded shadow-2xl shadow-white/10"
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
      )}
    </article>
  ))
}
